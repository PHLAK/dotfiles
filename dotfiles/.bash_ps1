## Set hostname color to blue (local) or red (remote)
[[ -n "$SSH_CLIENT" ]] && export HOST_COLOR=31m || export HOST_COLOR=34m

## Show git dirty state (*/+) in PS1
export GIT_PS1_SHOWDIRTYSTATE=1

## Build our custom PS1
PS1="\[\033[01;32m\]"                   # Set USER color to green
PS1=${PS1}"\u"                          # USER
PS1=${PS1}"\[\033[01;30m\]"             # Set at symbol color to black
PS1=${PS1}"@"                           # AT SIGN
PS1=${PS1}"\[\033[01;${HOST_COLOR}\]"   # Set HOST color dynamically
PS1=${PS1}"\h"                          # HOST
PS1=${PS1}" "                           # <space>
PS1=${PS1}"\[\033[01;35m\]"             # Set WORKDING DIRECTORY color to purple
PS1=${PS1}"\w"                          # WORKING DIRECTORY
PS1=${PS1}"\[\033[01;33m\]"             # Set GIT PS1 color to yellow
PS1=${PS1}"\$(__git_ps1)"               # GIT PS1
PS1=${PS1}" "                           # <space>
PS1=${PS1}"\[\033[01;30m\]"             # Set DOLLAR SIGN color to black
PS1=${PS1}"\$"                          # DOLLAR SIGN
PS1=${PS1}"\[\033[00m\]"                # Set USER TEXT color to white
PS1=${PS1}" "                           # <space>

# Set the environment variable
export PS1=${PS1}

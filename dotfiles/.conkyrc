## Performance Settings
########################################

xftfont Terminus:size=8
xftalpha 0.8

update_interval 2.0
total_run_times 0

double_buffer yes
no_buffers yes

cpu_avg_samples 2
diskio_avg_samples 2
net_avg_samples 2

override_utf8_locale no


## Alignment Settings
########################################

alignment bottom_right

gap_x 10
gap_y 10

minimum_size 260 5


## Apperance Settings
########################################

own_window yes
own_window_type normal
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_transparent yes
own_window_argb_visuals yes
own_window_argb_values 0

draw_shades no
draw_outline no
draw_borders no
draw_graph_borders yes

default_color white
default_shade_color black

uppercase yes


## Main Appearance
########################################

TEXT
$nodename $alignr $kernel ($machine)
$stippled_hr

CPU: $alignr ${cpu cpu1}%  ${cpu cpu2}%  ${cpu cpu3}%  ${cpu cpu4}%  ${cpu cpu5}%  ${cpu cpu6}%  ${cpu cpu7}%  ${cpu cpu8}%
${cpugraph 20}
Load: $alignr $loadavg

RAM: $alignr $mem / $memmax
${membar 3}
Swap: $alignr $swap / $swapmax
${swapbar 3}

Uptime: $alignr $uptime


PROCESSES $alignr Total: $processes / Running: $running_processes
$stippled_hr

CPU Usage $alignr PID     CPU%   MEM%
${color #ddaa00} ${top name 1} $alignr ${top pid 1} ${top cpu 1} ${top mem 1}$color
 ${top name 2} $alignr ${top pid 2} ${top cpu 2} ${top mem 2}
 ${top name 3} $alignr ${top pid 3} ${top cpu 3} ${top mem 3}

MEM Usage$color
${color #ddaa00} ${top_mem name 1} $alignr ${top_mem pid 1} ${top_mem cpu 1} ${top_mem mem 1}$color
 ${top_mem name 2} $alignr ${top_mem pid 2} ${top_mem cpu 2} ${top_mem mem 2}
 ${top_mem name 3} $alignr ${top_mem pid 3} ${top_mem cpu 3} ${top_mem mem 3}


HDD
$stippled_hr

I/O: $alignr Read: $diskio_read / Write: $diskio_write
${diskiograph 20}

ROOT: $alignr ${fs_used /} / ${fs_size /}
${fs_bar 3 /}
XHDD: $alignr ${fs_used /mnt/external} / ${fs_size /mnt/external}
${fs_bar 3 /mnt/external}


Network $alignr ${addr eth1}
$stippled_hr

Down: ${downspeed eth1}/s $alignr Up: ${upspeed eth1}/s
${downspeedgraph eth1 20,128}$alignr${upspeedgraph eth1 20,128}
Tot: ${totaldown eth1} $alignr Tot: ${totalup eth1}

[branch "master"]
    remote = origin
    merge = refs/heads/master
[color]
    ui = auto
[core]
    autocrlf = input
    editor = nano
    excludesfile = ~/.gitignore_global
[push]
    default = simple
[remote "origin"]
    push = HEAD
[alias]
    fast-forward = merge --ff-only
    unstage = reset HEAD --
    lg = log --graph --pretty=format:'%C(red)%h%Creset %C(dim white)-%Creset %s %C(dim white)â€¢%Creset %C(bold blue)%an%Creset %C(green)[%cr] %C(yellow)%d%Creset'
[sendemail]
    smtpencryption = tls
    smtpServer = smtp.gmail.com
    smtpServerPort = 587
    smtpUser = Chris@ChrisKankiewicz.com
[commit]
	gpgsign = true

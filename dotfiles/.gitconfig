[user]
    name = Chris Kankiewicz
    email = Chris@ChrisKankiewicz.com
[branch "master"]
    remote = origin
    merge = refs/heads/master
[color]
    ui = auto
[core]
    autocrlf = input
    editor = nano
    excludesfile = ~/.gitignore_global
[push]
    default = simple
[remote "origin"]
    push = HEAD
[alias]
    unstage = reset HEAD --
